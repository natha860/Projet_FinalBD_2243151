@model IEnumerable<BD_Final_Project.Models.Equipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneeDeFondation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Championnat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnneeDeFondation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Championnat.ChampionnatId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EquipeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EquipeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EquipeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
